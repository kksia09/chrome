{
  "name": "Chrome GUI Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--ipc=host",
    "--shm-size=2g"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "forwardPorts": [6080],
  "postCreateCommand": "echo 'Run: start-gui.sh to launch Chrome GUI'"
}