{
  "name": "Automa Chrome GUI",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--ipc=host",
    "--shm-size=2g"
  ],
  "forwardPorts": [6080, 9222],
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint"]
    }
  },
  "overrideCommand": false,
  "postStartCommand": "/usr/local/bin/start-gui.sh"
}
